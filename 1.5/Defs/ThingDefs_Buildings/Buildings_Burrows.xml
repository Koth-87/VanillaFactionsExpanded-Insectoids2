<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<ThingDef ParentName="EtherealThingBase">
		<defName>VFEI2_SmallBurrowSpawner</defName>
		<label>tunnel</label>
		<thingClass>VFEInsectoids.BurrowSpawner</thingClass>
		<tickerType>Normal</tickerType>
		<drawerType>RealtimeOnly</drawerType>
		<alwaysFlee>true</alwaysFlee>
		<building>
			<groundSpawnerSustainedEffecter>EmergencePointSustained2X2</groundSpawnerSustainedEffecter>
			<groundSpawnerCompleteEffecter>EmergencePointComplete2X2</groundSpawnerCompleteEffecter>
		</building>
	</ThingDef>
	<ThingDef ParentName="BuildingNaturalBase">
		<defName>VFEI2_SmallBurrow</defName>
		<label>small insect burrow</label>
		<description>A small insectoid-made hole connecting to some unseen cave network deep under the surface. The walls are covered in insectoid goop and are too slippery to climb down. Insectoid chittering can be heard from the tunnels beneath. They will emerge regularly in decreasing intervals until the burrow collapses or is destroyed. Burrows can only be damaged by explosions.</description>
		<thingClass>VFEInsectoids.Burrow</thingClass>
		<fillPercent>0</fillPercent>
		<category>Building</category>
		<altitudeLayer>FloorEmplacement</altitudeLayer>
		<passability>Impassable</passability>
		<selectable>true</selectable>
		<leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
		<rotatable>false</rotatable>
		<tickerType>Normal</tickerType>
		<terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
		<canOverlapZones>false</canOverlapZones>
		<statBases>
			<MaxHitPoints>30</MaxHitPoints>
			<Flammability>0</Flammability>
			<MarketValue>50</MarketValue>
		</statBases>
		<building>
			<isInert>true</isInert>
			<isTargetable>true</isTargetable>
			<canBeDamagedByAttacks>false</canBeDamagedByAttacks>
			<claimable>false</claimable>
			<deconstructible>false</deconstructible>
			<destroyShakeAmount>0</destroyShakeAmount>
		</building>
		<comps>
			<li Class="VFEInsectoids.CompProperties_InsectBurrow">
				<insectoidsToSpawn>
					<li>
						<pawn>VFEI2_RoyalMegascarab</pawn>
						<weight>1</weight>
					</li>
				</insectoidsToSpawn>
				<spawningStartingTimer>10000</spawningStartingTimer>
				<spawningDelayMultiplier>0.8</spawningDelayMultiplier>
				<maxWavesToSpawn>8</maxWavesToSpawn>
			</li>
		</comps>
		<graphicData>
			<texPath>Things/Building/InsectBurrowSmall</texPath>
			<graphicClass>Graphic_Random</graphicClass>
		</graphicData>
	</ThingDef>
