<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="BuildingBase" Name="VFEI2_InsectoidWallBase" Abstract="true">
    <thingClass>Building</thingClass>
    <category>Building</category>
    <statBases>
      <MeditationFocusStrength>0.22</MeditationFocusStrength>
    </statBases>
    <graphicData>
      <graphicClass>Graphic_Single</graphicClass>
      <linkType>CornerFiller</linkType>
      <linkFlags>
        <li>Wall</li>
        <li>Rock</li>
      </linkFlags>
      <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
        <edgeTop>Damage/Edge</edgeTop>
        <edgeBot>Damage/Edge</edgeBot>
        <edgeLeft>Damage/Edge</edgeLeft>
        <edgeRight>Damage/Edge</edgeRight>
      </damageData>
    </graphicData>
    <altitudeLayer>Building</altitudeLayer>
    <passability>Impassable</passability>
    <blockWind>true</blockWind>
    <castEdgeShadows>true</castEdgeShadows>
    <fillPercent>1</fillPercent>
    <coversFloor>true</coversFloor>
    <placingDraggableDimensions>1</placingDraggableDimensions>
    <tickerType>Never</tickerType>
    <rotatable>false</rotatable>
    <selectable>true</selectable>
    <neverMultiSelect>true</neverMultiSelect>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <holdsRoof>true</holdsRoof>
    <staticSunShadowHeight>1.0</staticSunShadowHeight>
    <blockLight>true</blockLight>
    <canOverlapZones>false</canOverlapZones>
    <fertility>0</fertility>
	<designationCategory>VFEI2_Insectoids</designationCategory>
    <building>
      <paintable>false</paintable>
      <isInert>true</isInert>
      <isPlaceOverableWall>true</isPlaceOverableWall>
      <ai_chillDestination>false</ai_chillDestination>
      <supportsWallAttachments>true</supportsWallAttachments>
    </building>
    <comps>
      <li Class="CompProperties_MeditationFocus">
        <statDef>MeditationFocusStrength</statDef>
        <focusTypes>
          <li>Minimal</li>
        </focusTypes>
      </li>
    </comps>
	<constructEffect>VFEI2_Interact_ConstructSlime</constructEffect>
    <damageMultipliers>
      <li>
        <damageDef>Bomb</damageDef>
        <multiplier>2</multiplier>
      </li>
      <li>
        <damageDef>Thump</damageDef>
        <multiplier>2</multiplier>
      </li>
    </damageMultipliers>
  </ThingDef>

  <ThingDef ParentName="VFEI2_InsectoidWallBase">
    <defName>VFEI_HiveWall</defName>
    <label>hive wall</label>
    <description>An impassable wall made from insectoid goop. Capable of holding up a roof.</description>
    <graphicData>
      <texPath>Structures/Linked/WallHive_Atlas</texPath>
    </graphicData>
    <uiIconPath>Structures/Linked/WallHive_MenuIcon</uiIconPath>
    <statBases>
      <MaxHitPoints>60</MaxHitPoints>
      <WorkToBuild>2000</WorkToBuild>
      <Flammability>1.0</Flammability>
    </statBases>
    <building>
      <blueprintGraphicData>
        <texPath>Structures/Linked/WallHive_Blueprint_Atlas</texPath>
      </blueprintGraphicData>
    </building>
    <researchPrerequisites>
        <li>VFEI2_BasicHivetech</li>
    </researchPrerequisites>
    <uiOrder>2000</uiOrder>
  </ThingDef>
  
  <ThingDef ParentName="VFEI2_InsectoidWallBase">
    <defName>VFEI2_InsectJellyWall</defName>
    <label>insect jelly wall</label>
    <description>An impassable wall made from insect jelly, constructed by the worker caste of an insectoid geneline. Capable of holding up a roof.</description>
    <graphicData>
      <texPath>Structures/Linked/WallInsectJelly_Atlas</texPath>
    </graphicData>
    <uiIconPath>Structures/Linked/WallInsectJelly_MenuIcon</uiIconPath>
    <statBases>
      <MaxHitPoints>40</MaxHitPoints>
      <WorkToBuild>2000</WorkToBuild>
      <Flammability>0.5</Flammability>
    </statBases>
    <building>
      <blueprintGraphicData>
        <texPath>Structures/Linked/WallInsectJelly_Blueprint_Atlas</texPath>
      </blueprintGraphicData>
    </building>
    <researchPrerequisites>
        <li>VFEI2_BasicHivetech</li>
    </researchPrerequisites>
	<costList>
	    <InsectJelly>4</InsectJelly>
	</costList>
    <killedLeavings>
      <InsectJelly>2</InsectJelly>
    </killedLeavings>
    <uiOrder>2001</uiOrder>
  </ThingDef>
  
  <ThingDef ParentName="VFEI2_InsectoidWallBase">
    <defName>VFEI2_RoyalJellyWall</defName>
    <label>royal jelly wall</label>
    <description>An impassable, hard wall made from royal jelly, constructed by the worker caste of an insectoid geneline. Capable of holding up a roof.</description>
    <graphicData>
      <texPath>Structures/Linked/WallRoyalJelly_Atlas</texPath>
    </graphicData>
