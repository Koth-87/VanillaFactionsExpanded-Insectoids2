<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <FactionDef ParentName="FactionBase">
    <defName>VFEI2_Hive</defName>
    <label>hive</label>
    <description>A result of a galaxy wide experiment gone wrong, this monstrous hive-mind has made this planet their home. Divided into castes, their society relies on the giant queen.\n\nThese insectoids are not interested in diplomacy. They will try to eliminate anything that they perceive to be a threat.</description>
    <pawnSingular>insect</pawnSingular>
    <pawnsPlural>insects</pawnsPlural>
    <fixedName>Hive</fixedName>
    <factionIconPath>UI/Hive</factionIconPath>
    <colorSpectrum>
      <li>(0.73, 0.69, 0.52)</li>
    </colorSpectrum>
    <humanlikeFaction>false</humanlikeFaction>
    <hidden>false</hidden>
    <autoFlee>false</autoFlee>
    <canUseAvoidGrid>false</canUseAvoidGrid>
    <techLevel>Animal</techLevel>
    <canSiege>false</canSiege>
	<hostileToFactionlessHumanlikes>true</hostileToFactionlessHumanlikes>
    <canStageAttacks>true</canStageAttacks>
    <raidCommonalityFromPointsCurve>
      <points>
        <li>(300,  0)</li>
        <li>(700,  1)</li>
        <li>(1400, 1.8)</li>
        <li>(2800, 2.2)</li>
        <li>(4000, 2.6)</li>
      </points>
    </raidCommonalityFromPointsCurve>
    <maxPawnCostPerTotalPointsCurve>
      <points>
        <li>(400,200)</li>
        <li>(900,300)</li>
        <li>(100000,10000)</li>
      </points>
    </maxPawnCostPerTotalPointsCurve>
    <pawnGroupMakers>
      <li>
        <kindDef>Combat</kindDef>
        <commonality>100</commonality>
        <options>
          <Megascarab>1</Megascarab>
        </options>
      </li>
      <li>
        <kindDef>Settlement</kindDef>
        <options>
          <Megascarab>1</Megascarab>
        </options>
      </li>
    </pawnGroupMakers>
    <permanentEnemyToEveryoneExcept>
      <li MayRequire="Ludeon.RimWorld.Anomaly">Entities</li>
    </permanentEnemyToEveryoneExcept>
    <settlementTexturePath>UI/InsectoidHive</settlementTexturePath>
    <allowedArrivalTemperatureRange>0~45</allowedArrivalTemperatureRange>
    <maxConfigurableAtWorldCreation>1</maxConfigurableAtWorldCreation>
    <requiredCountAtGameStart>1</requiredCountAtGameStart>
	<settlementGenerationWeight>1</settlementGenerationWeight>
    <configurationListOrderPriority>1001</configurationListOrderPriority>
  </FactionDef>
  
</Defs>
