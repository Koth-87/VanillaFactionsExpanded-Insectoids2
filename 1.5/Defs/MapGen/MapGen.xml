<Defs>

  <VFEInsectoids.InsectMapGenDef Name="HiveSpawnBase">
    <defName>VFEI2_SorneMapGen</defName>
	<hivesToSpawn>20~30</hivesToSpawn>
	<hiveGenelinesToSpawn>
		<li>VFEI_Sorne</li>
	</hiveGenelinesToSpawn>
	<hiveSurroundings>
		<maxSpawnCreepRadius>100</maxSpawnCreepRadius>
		<alwaysSpawnCreepInRadius>4</alwaysSpawnCreepInRadius>
		<creepSpawnChancePerDistanceToHive>9</creepSpawnChancePerDistanceToHive>
		<spawnSettings>
			<li>
				<insectSpawnThingsAmount>3~5</insectSpawnThingsAmount>
				<thingCommonalities>
					<VFEI2_LargeGlowPod>1</VFEI2_LargeGlowPod>
					<VFEI2_GlowPodFormation>1</VFEI2_GlowPodFormation>
					<VFEI2_GlowPodSpire>1</VFEI2_GlowPodSpire>
					<VFEI2_StaticPod>1</VFEI2_StaticPod>
					<VFEI2_FoamPod>1</VFEI2_FoamPod>
					<VFEI2_TendrilFarm>1</VFEI2_TendrilFarm>
					<VFEI2_Creeper>1</VFEI2_Creeper>
					<VFEI2_JellyFarm>1</VFEI2_JellyFarm>
					<VFEI2_InsectoidCocoon>1</VFEI2_InsectoidCocoon>
				</thingCommonalities>
				<spawnMethod>Scattered</spawnMethod>
				<chance>1</chance>
			</li>
			<li>
				<insectSpawnThingsAmount>3~5</insectSpawnThingsAmount>
				<thingCommonalities>
					<VFEI_HiveWall>1</VFEI_HiveWall>
					<VFEI2_InsectJellyWall>1</VFEI2_InsectJellyWall>
					<VFEI2_RoyalJellyWall>1</VFEI2_RoyalJellyWall>
				</thingCommonalities>
				<spawnMethod>Clumped</spawnMethod>
				<chance>0.7</chance>
				<loopCount>1~3</loopCount>
			</li>
		</spawnSettings>
	</hiveSurroundings>
  </VFEInsectoids.InsectMapGenDef>

